{% extends 'base.html.twig' %}

{% block content %}


<div class="d-flex justify-content-center">
<form class="text-center border border-light p-5 mt-5 col-lg-6 col-md-8 col-sm-12" action="{{ path('login_usuario') }}" method="POST">

    <p class="h4 mb-4">Ingreso al sistema</p>

    {% if error %}
        <div class="p-2 text-danger">{{ error.message }}</div>
    {% endif %}

    <input type="text" name="_codigoEmpresa" class="form-control mb-4" placeholder="Empresa">

    <input type="text" name="_username" class="form-control mb-4" placeholder="Usuario">

    <!-- Password -->
    <input type="password" name="_password" class="form-control mb-4" placeholder="Password">

    <!-- Sign in button -->
    <button class="btn btn-info btn-block my-4" type="submit">Acceder</button>
</form>
</div>
{% endblock %}