{% extends 'base.html.twig' %}

{% block content %}


<div class="mt-5 pt-5 d-flex justify-content-center">
    <div class="col-6">
        <div class="card d-flex justify-content-center">
            <div class="card-header red darken-1 text-white">
                LOGIN
            </div>
            <div class="card-body">
        <form action="{{ path('login') }}" method="POST">



    {% if error %}
        <div>{{ error.messageKey|trans }}</div>
    {% endif %}

            <input type="text" id="username" name="_username" class="form-control mb-4" placeholder="Usuario">
            <input type="password" id="password" name="_password" class="form-control mb-4" placeholder="Password">
            <button class="btn red darken-1 text-white btn-block my-4" type="submit">Acceder</button>
        </form>
        </div>
        </div>
    </div>
</div>
{% endblock %}